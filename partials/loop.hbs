<div class="post-list">

	<div id="push">

		{{#foreach posts}}

			<article class="{{post_class}}">
				<div class="inner">
					<a class="post-link" aria-label="{{{title}}}" href="{{url absolute="true"}}"></a>
					{{#if feature_image}}
					<figure class="post-image">
						<a href="{{url absolute="true"}}"><img srcset="{{img_url feature_image size="s"}} 300w,
            {{img_url feature_image size="m"}} 416w,
            {{img_url feature_image size="l"}} 1000w,
            {{img_url feature_image size="xl"}} 2000w"
    sizes="(max-width: 1000px) 400px, 700px"
    src="{{img_url feature_image size="m"}}" alt="{{{title}}}{{t " - Brindisi.tk"}}" /></a>
					</figure>
					{{/if}}
					<span class="post-meta">
						<span class="post-date">{{date format="DD MMMM YYYY"}}</span>
					</span>
					<h2 class="post-title"><a href="{{url absolute="true"}}">{{{title}}}</a></h2>
					<h3 class="post-excerpt">{{excerpt words="15"}}&hellip;</h3>
					<span class="post-more"><a href="{{url absolute="true"}}">{{t "Continua a leggere"}} <i class="icon-arrow-right"></i></a></span>
				</div>
			</article>

		{{/foreach}}

	</div>

</div>

{{pagination}}
