<nav id="pagination" class="pagination" role="pagination">
	<div class="inner">
	    {{#if prev}}
	        <a class="pagination-item pagination-next" href="{{page_url prev}}"><i class="icon-arrow-left"></i> <span>{{t "Post Successivi"}}</span></a>
	    {{/if}}
	    <span class="pagination-info">{{t "Pagina {page} di {pages}" page=page pages=pages}}</span>
	    {{#if next}}
	        <a class="pagination-item pagination-prev" href="{{page_url next}}"><span>{{t "Post Precedenti"}}</span> <i class="icon-arrow-right"></i></a>
	    {{/if}}
	    <div class="clear"></div>
	</div>
</nav>
